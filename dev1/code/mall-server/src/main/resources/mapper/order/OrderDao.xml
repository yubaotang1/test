<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wfuhui.mall.modules.order.dao.OrderDao">

    <resultMap type="com.wfuhui.mall.modules.order.entity.OrderEntity" id="orderMap">
        <result property="id" column="id"/>
        <result property="orderNumber" column="order_number"/>
        <result property="totalAmount" column="total_amount"/>
        <result property="orderStatus" column="order_status"/>
        <result property="memberId" column="member_id"/>
        <result property="remark" column="remark"/>
        <result property="courierNum" column="courier_num"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

	<select id="queryObject" resultType="com.wfuhui.mall.modules.order.entity.OrderEntity">
		select * from mall_order where id = #{value}
	</select>

	<select id="queryList" resultType="com.wfuhui.mall.modules.order.entity.OrderEntity">
		select *,u.nickname as 'member.nickname',u.real_name as 'member.realName' from mall_order o left join mall_member u on u.id = o.member_id
		<where>
			<if test="orderStatus != null and orderStatus != -1">
				order_status = #{orderStatus}
			</if>
			<if test="orderNumber != null and orderNumber != ''">
				and order_number like '%${orderNumber}%'
			</if>
			<if test="memberId != null">
				and member_id = #{memberId}
			</if>
		</where>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by o.id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from mall_order 
		<where>
			<if test="orderStatus != null and orderStatus != -1">
				order_status = #{orderStatus}
			</if>
			<if test="orderNumber != null and orderNumber != ''">
				and order_number like '%${orderNumber}%'
			</if>
			<if test="memberId != null">
				and member_id = #{memberId}
			</if>
		</where>
	</select>
	 
	<insert id="save" parameterType="com.wfuhui.mall.modules.order.entity.OrderEntity" useGeneratedKeys="true" keyProperty="id">
		insert into mall_order
		(
			`member_id`, 
			`order_number`, 
			`total_amount`, 
			`order_status`, 
			`remark`, 
			`create_time`
		)
		values
		(
			#{memberId}, 
			#{orderNumber}, 
			#{totalAmount}, 
			#{orderStatus}, 
			#{remark}, 
			#{createTime}
		)
	</insert>
	 
	<update id="update" parameterType="com.wfuhui.mall.modules.order.entity.OrderEntity">
		update mall_order 
		<set>
			<if test="orderNumber != null">`order_number` = #{orderNumber}, </if>
			<if test="totalAmount != null">`total_amount` = #{totalAmount}, </if>
			<if test="orderStatus != null">`order_status` = #{orderStatus}, </if>
			<if test="courierNum != null">`courier_num` = #{courierNum}, </if>
			<if test="createTime != null">`create_time` = #{createTime}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from mall_order where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from mall_order where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>
	
	<update id="updateByOrderNumber" parameterType="com.wfuhui.mall.modules.order.entity.OrderEntity">
		update mall_order set `order_status` = #{orderStatus} where order_number = #{orderNumber}
	</update>

</mapper>